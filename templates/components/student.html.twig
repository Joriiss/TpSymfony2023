<div class="card">
    <div class="card-img">
        <img src="https://picsum.photos/500/400">
    </div>
        <div class="card-header">
            <h3>{{ student.firstName }} {{ student.lastName }}</h3>
        </div>
        <div class="card-body">
            <ul>
                <li>
                    {{ student.birthDate|date('d-m-Y')  }}
                </li>
            </ul>
        </div>
        <div class="card-footer">
            <button class="btn btn-primary btn-blue"><a href="{{ path('app_student_update', {id: student.id}) }}">edit</a></button>
            <form action="{{ url('app_student_remove', { id: student.id }) }}" method="post">
                <input type="hidden" name="token" value="{{ csrf_token('delete-student'~student.id) }}"/>
                <button class="btn-delete" type="submit">x</button>
            </form>
        </div>
</div>
